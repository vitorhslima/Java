package br.com.casa.projeto;

import java.util.Scanner;

public class Cozinha extends Estrutura {
	
	public void ligandoLuzCozinha(String comodo) {
		getLampada().ligandoHaLampada(comodo);
		ligaFogao(comodo);
	}

	public void ligaFogao(String comodo) {		

		boolean verifica = false;
		
		Scanner sair = new Scanner(System.in);		  
		
		System.out.println("=================================================================");
		System.out.println("Você quer ligar o Fogão ? | Para liga escreva 'liga' ou 'desliga'");
		System.out.println("=================================================================");
		comodo = sair.next().toLowerCase();
		
		
		if (verifica == false) {
					
				if(comodo.equals("liga")) {
					System.out.println("---------");
					System.out.println("ta ligado");
					System.out.println("---------");					
					verifica = true;
				}				
				if (comodo.equals("desliga")) {
					System.out.println("----------------");
					System.out.println("desligou o fogão");
					System.out.println("-----------------");
					verifica = true;
				}
				
				if (verifica == false) {
					System.out.println("-----------------------");
					System.out.println("Esse comando é invalido");
					System.out.println("-----------------------");
					
				}		
		}
		
		
	}
	
	
}
